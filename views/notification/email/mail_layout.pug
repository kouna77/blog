doctype true
html(lang="en")
head
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    meta(charset="UTF-8")
    meta(name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title= `Neptune Prime ${business ?  '- ' + business.name : ''}`
    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    meta(name="description" content="Neptune Prime is an e-commerce platform where you can sell your goods and services. No more days worrying about payment providers and remembering different customers as your business grow")
    meta(name="author" content="Babacar Ciss√© DIA <bcdbuddy@outlook.com>")
    link(rel="icon" sizes="192x192" href="https://neptune-prime.com/img/NP.png")
    link(rel="mask-icon" href="https://neptune-prime.com/img/NP.svg" color="#456990")
    style.
        @media only screen and (max-width: 600px) {
            .inner-body {
                width: 100% !important;
            }
            .footer {
                width: 100% !important;
            }
        }
        @media only screen and (max-width: 500px) {
            .button {
                width: 100% !important;
            }
        }
    body
        include mail_mixins

        table.wrapper(width='100%' cellpadding='0' cellspacing='0' style='font-family: Avenir, Helvetica, sans-serif; box-sizing: border-box; background-color: #f5f8fa; margin: 0; padding: 0; width: 100%; -premailer-cellpadding: 0; -premailer-cellspacing: 0; -premailer-width: 100%;')
            tr
                td(align='center' style='font-family: Avenir, Helvetica, sans-serif; box-sizing: border-box;')
                    table.content(width='100%' cellpadding='0' cellspacing='0' style='font-family: Avenir, Helvetica, sans-serif; box-sizing: border-box; margin: 0; padding: 0; width: 100%; -premailer-cellpadding: 0; -premailer-cellspacing: 0; -premailer-width: 100%;')
                        tr
                            td.header(style='font-family: Avenir, Helvetica, sans-serif; box-sizing: border-box; padding: 25px 0; text-align: center;')
                                a(href='https://neptune-prime.com' style='font-family: Avenir, Helvetica, sans-serif; box-sizing: border-box; color: #bbbfc3; font-size: 19px; font-weight: bold; text-decoration: none; text-shadow: 0 1px 0 white;')
                                    | Neptune Prime
                        // Email Body
                        block content
                            tr
                                td(style='font-family: Avenir, Helvetica, sans-serif; box-sizing: border-box;')
                                    table.footer(align='center' width='570' cellpadding='0' cellspacing='0' style='font-family: Avenir, Helvetica, sans-serif; box-sizing: border-box; margin: 0 auto; padding: 0; text-align: center; width: 570px; -premailer-cellpadding: 0; -premailer-cellspacing: 0; -premailer-width: 570px;')
                                        tr
                                            td.content-cell(align='center' style='font-family: Avenir, Helvetica, sans-serif; box-sizing: border-box; padding: 35px;')
                                                p(style='font-family: Avenir, Helvetica, sans-serif;box-sizing: border-box; line-height: 1.5em; margin-top: 0; color: #AEAEAE;font-size: 12px; text-align: center;')
                                                    span Claire Jackson,
                                                    br
                                                    span Customer Service
                                                    br
                                                    span #[a(href="https://neptune-prime.com" title="Neptune Prime") #[em Neptune Prime]]
                                                    br
                                                    span 2019 - #{new Date().getFullYear()} Prime Studio LLC.
                                                    br
                                                    hr
                                                    a(href="#unsubscribe") Unsubscribe
