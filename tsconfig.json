{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["*"]
    }
  },
  "files": [
    "src/types.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
